/*
 * EJERCICIO  5 - Crea un programa Potencia.java que reciba dos argumentos enteros: 
 * la base y el exponente, que calcule la potencia (base^exponente) 
 * y muestre el resultado por pantalla
 * 
 * 
 * Crea un programa EjecutorPotencia.java que:
 * Lance dos procesos hijos de Potencia,
 * La salida de dos procesos debe ser enviada a los archivos potencia1.txt y potencia2.txt y 
 * los errores a errorPotencia1.txt, y errorPotencia2.txt
 */

import java.io.File;
import java.io.IOException;

public class Ejercicio05 {

	public static void main(String[] args) {
		
		ProcessBuilder pBuilder1 = new ProcessBuilder("java","Potencia","2","3");
		ProcessBuilder pBuilder2 = new ProcessBuilder("java","Potencia","3","4");
		try {
			// Redireccionamos la salida estandar y la salida de error
			pBuilder1.redirectOutput(new File("potencia1.txt"));
			pBuilder1.redirectError(new File("errorPotencia1.txt"));
			
			pBuilder2.redirectOutput(new File("potencia2.txt"));
			pBuilder2.redirectError(new File("errorPotencia2.txt"));
			
			// Establecemos directorio de trabajo
			pBuilder1.directory(new File("bin"));
			pBuilder2.directory(new File("bin"));
			
			Process proceso1 = pBuilder1.start();
			Process proceso2 = pBuilder2.start();
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
